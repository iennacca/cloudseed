    <TargetFramework>net7.0</TargetFramework>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
  </PropertyGroup>
  <ItemGroup>
    <!-- Presentation -->
    <Compile Include="Source/Presentation/Web/WebResponse.fs" />

    <!-- Infrastructure -->
    <Compile Include="Configuration.fs" />
    <Compile Include="Source/Infrastructure/Events.fs" />
    <Compile Include="Source/Infrastructure/Persistence.fs" />
    <Compile Include="Source/Infrastructure/Caching/SimpleTimedMemoryCache.fs" />
    <Compile Include="Source/Infrastructure/Queueing/BatchWriter.fs" />

    <!-- InfraDomain: Counter -->
    <Compile Include="Source/Counter/Domain/CounterEvents.fs" />
    <Compile Include="Source/Counter/Domain/CounterHourly.fs" />
    <Compile Include="Source/Counter/Domain/CounterServiceTree.fs" />
    <Compile Include="Source/Counter/Infrastructure/CounterTimeUtils.fs" />
    <Compile Include="Source/Counter/Persistence/CounterDataRepository.fs" />
    <Compile Include="Source/Counter/Persistence/IncrementCounterBatchWriter.fs" />
    <Compile Include="Source/Counter/App/Commands/IncrementCounterCommand.fs" />
    <Compile Include="Source/Counter/App/Queries/GetCounterTotalQuery.fs" />

